<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bookings</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>All Bookings</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Date</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% bookings.forEach(booking => { %>
        <tr>
          <td><%= booking.id %></td>
          <td><%= booking.name %></td>
          <td><%= booking.email %></td>
          <td><%= booking.date.toISOString().split('T')[0] %></td>
          <td><%= booking.time %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <a href="/">Back to Booking Form</a>
</body>
</html>
